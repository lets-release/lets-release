{
  "name": "@lets-release/calver",
  "version": "4.0.0",
  "description": "Let's Release calver library",
  "author": "Sean Tu <manlao@gmail.com> (https://github.com/manlao)",
  "license": "MIT",
  "homepage": "https://github.com/lets-release/lets-release/tree/main/libs/calver",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lets-release/lets-release.git"
  },
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "test": "vitest --config ./vitest.unit.config.ts",
    "test:cov": "vitest --config ./vitest.unit.config.ts --coverage.enabled",
    "type-check": "rimraf ./dist && tsc --build",
    "build": "rimraf ./dist && tspc --build tsconfig.build.json"
  },
  "dependencies": {
    "@date-fns/tz": "^1.4.1",
    "@lets-release/versioning": "workspace:^",
    "date-fns": "^4.1.0",
    "lodash-es": "^4.17.23",
    "zod": "^4.3.5"
  },
  "files": [
    "package.json",
    "README.md",
    "dist/*",
    "!dist/*.tsbuildinfo"
  ],
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./*": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    }
  }
}
