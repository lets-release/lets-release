{
  "name": "lets-release",
  "version": "5.0.0",
  "description": "Run automated workspace packages releasing",
  "author": "Sean Tu <manlao@gmail.com> (https://github.com/manlao)",
  "license": "MIT",
  "homepage": "https://github.com/lets-release/lets-release",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lets-release/lets-release.git"
  },
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "lets-release": "./src/cli.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "prepare": "husky || true",
    "test": "vitest --config ./vitest.unit.config.ts",
    "test:cov": "vitest --config ./vitest.unit.config.ts --coverage.enabled",
    "test:e2e": "vitest --config ./vitest.e2e.config.ts",
    "test:workspace": "vitest --workspace ./vitest.vscode.workspace.ts",
    "type-check": "rimraf ./dist && tsc --build",
    "lint": "eslint --fix",
    "build": "rimraf ./dist && tspc --build tsconfig.build.json",
    "knip": "knip"
  },
  "dependencies": {
    "@lets-release/calver": "workspace:^",
    "@lets-release/config": "workspace:^",
    "@lets-release/semver": "workspace:^",
    "cac": "^6.7.14",
    "conventional-commits-parser": "^6.2.0",
    "cosmiconfig": "^9.0.0",
    "debug": "^4.4.1",
    "dir-glob": "^3.0.1",
    "env-ci": "^11.1.1",
    "execa": "^9.6.0",
    "figures": "^6.1.0",
    "find-versions": "^6.0.0",
    "git-log-parser": "^1.2.1",
    "hook-std": "^3.0.0",
    "lodash-es": "^4.17.21",
    "marked": "^16.1.1",
    "marked-terminal": "^7.3.0",
    "micromatch": "^4.0.8",
    "read-package-up": "^11.0.0",
    "read-pkg": "^9.0.1",
    "semver": "^7.7.2",
    "signale": "^1.4.0",
    "stream-to-array": "^2.3.0",
    "strip-ansi": "^7.1.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@aliser/ts-transformer-append-js-extension": "^1.0.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@lets-release/testing": "workspace:^",
    "@types/debug": "^4.1.12",
    "@types/dir-glob": "^2.0.3",
    "@types/env-ci": "^3.1.4",
    "@types/git-log-parser": "^1.2.3",
    "@types/lodash-es": "^4.17.12",
    "@types/marked-terminal": "^6.1.1",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^24.1.0",
    "@types/semver": "^7.7.0",
    "@types/signale": "^1.4.7",
    "@types/stream-buffers": "^3.0.7",
    "@types/stream-to-array": "^2.3.3",
    "@typescript-eslint/parser": "^8.38.0",
    "@typescript-eslint/utils": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "file-url": "^4.0.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "knip": "^5.62.0",
    "lint-staged": "^16.1.4",
    "ncp": "^2.0.0",
    "p-retry": "^6.2.1",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "rimraf": "^6.0.1",
    "stream-buffers": "^3.0.3",
    "tempy": "^3.1.0",
    "ts-patch": "^3.3.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.38.0",
    "typescript-transform-paths": "^3.5.5",
    "vite": "^7.0.6",
    "vite-node": "^3.2.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">= 9.0.0"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "files": [
    "package.json",
    "README.md",
    "dist/*",
    "!dist/*.tsbuildinfo"
  ],
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
      "lets-release": "./dist/cli.js"
    },
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./*": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        1,
        "always",
        256
      ]
    }
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
