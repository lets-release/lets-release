{
  "name": "lets-release",
  "version": "3.0.0",
  "description": "Run automated workspace packages releasing",
  "author": "Sean Tu <manlao@gmail.com> (https://github.com/manlao)",
  "license": "MIT",
  "homepage": "https://github.com/lets-release/lets-release",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lets-release/lets-release.git"
  },
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "lets-release": "./src/cli.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "prepare": "husky || true",
    "test": "vitest --config ./vitest.unit.config.ts",
    "test:cov": "vitest --config ./vitest.unit.config.ts --coverage.enabled --coverage.thresholds.100",
    "test:e2e": "vitest --config ./vitest.e2e.config.ts",
    "test:workspace": "vitest --workspace ./vitest.vscode.workspace.ts",
    "type-check": "rimraf ./dist && tsc --build",
    "lint": "eslint --fix",
    "build": "rimraf ./dist && tspc --build tsconfig.build.json",
    "knip": "knip"
  },
  "dependencies": {
    "@lets-release/calver": "workspace:^",
    "@lets-release/config": "workspace:^",
    "@lets-release/semver": "workspace:^",
    "cac": "^6.7.14",
    "cosmiconfig": "^9.0.0",
    "debug": "^4.4.0",
    "dir-glob": "^3.0.1",
    "env-ci": "^11.1.0",
    "execa": "^9.5.2",
    "figures": "^6.1.0",
    "find-versions": "^6.0.0",
    "git-log-parser": "^1.2.1",
    "hook-std": "^3.0.0",
    "lodash-es": "^4.17.21",
    "marked": "^15.0.7",
    "marked-terminal": "^7.3.0",
    "micromatch": "^4.0.8",
    "read-package-up": "^11.0.0",
    "read-pkg": "^9.0.1",
    "semver": "^7.7.1",
    "signale": "^1.4.0",
    "stream-to-array": "^2.3.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@aliser/ts-transformer-append-js-extension": "^1.0.7",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.21.0",
    "@lets-release/testing": "workspace:^",
    "@types/debug": "^4.1.12",
    "@types/dir-glob": "^2.0.3",
    "@types/env-ci": "^3.1.4",
    "@types/fs-extra": "^11.0.4",
    "@types/git-log-parser": "^1.2.3",
    "@types/lodash-es": "^4.17.12",
    "@types/marked-terminal": "^6.1.1",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.13.5",
    "@types/semver": "^7.5.8",
    "@types/signale": "^1.4.7",
    "@types/stream-buffers": "^3.0.7",
    "@types/stream-to-array": "^2.3.3",
    "@typescript-eslint/parser": "^8.24.1",
    "@typescript-eslint/utils": "^8.24.1",
    "@vitest/coverage-v8": "^3.0.6",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "file-url": "^4.0.0",
    "fs-extra": "^11.3.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "knip": "^5.44.4",
    "lint-staged": "^15.4.3",
    "p-retry": "^6.2.1",
    "prettier": "^3.5.2",
    "prettier-eslint": "^16.3.0",
    "rimraf": "^6.0.1",
    "stream-buffers": "^3.0.3",
    "tempy": "^3.1.0",
    "ts-patch": "^3.3.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "typescript-transform-paths": "^3.5.3",
    "vite": "^6.1.1",
    "vite-node": "^3.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.6"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">= 8.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "package.json",
    "README.md",
    "dist/*",
    "!dist/*.tsbuildinfo"
  ],
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
      "lets-release": "./dist/cli.js"
    },
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./*": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        1,
        "always",
        256
      ]
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "cpu-features",
      "esbuild",
      "protobufjs",
      "ssh2"
    ]
  },
  "packageManager": "pnpm@10.4.1+sha512.c753b6c3ad7afa13af388fa6d808035a008e30ea9993f58c6663e2bc5ff21679aa834db094987129aa4d488b86df57f7b634981b2f827cdcacc698cc0cfb88af"
}
